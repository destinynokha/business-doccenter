# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Service Account (for Google Drive API)  
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----"

# Google Drive Configuration
MAIN_DRIVE_FOLDER_ID=your_main_folder_id_in_google_drive

# MongoDB Configuration (Free MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/business-docs

# NextAuth Configuration
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=your_random_32_character_secret_here

# Whitelisted Email Addresses (comma-separated)
WHITELISTED_EMAILS=director@yourcompany.com,ca.sharma@example.com,staff@yourcompany.com

# Staff Permissions (JSON format)
STAFF_PERMISSIONS={"director@yourcompany.com":"admin","ca.sharma@example.com":"full_access","staff@yourcompany.com":"upload_only"}
